<UserControl x:Class="BonusCardManager.WpfUI.Views.CreateBonusCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BonusCardManager.WpfUI.Views"            
             mc:Ignorable="d" 
             Background="White">
    <Grid Loaded="Grid_Loaded">
        <TextBlock HorizontalAlignment="Center" FontSize="25px" Height="40" Margin="0,10,0,0" Text="Создание новой карты" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="Auto"/>

        <TextBlock TextAlignment="Center" FontSize="22px" Height="40" Margin="10,55,285,0" Text="Срок действия"  TextWrapping="Wrap" VerticalAlignment="Top"/>
        <DatePicker Width="275" Loaded="calendarLoaded" FontSize="24px" SelectedDate="{Binding Path=ExpirationDate}" Height="40" Margin="165,50,5,0" VerticalAlignment="Top"/>

        <TextBlock TextAlignment="Center" FontSize="22px" Height="40" Margin="10,120,273,0" Text="Клиент"  TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" Height="80" Margin="165,100,5,0" VerticalAlignment="Top" Width="275">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Width="275" TextWrapping="Wrap" FontSize="16px" Height="45" Text="{Binding Path=FullName}" />
                        <TextBlock Width="275" FontSize="16px" Text="{Binding Path=PhoneNumber}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Height="25" Margin="10,185,9,0" Text="{Binding Message}" TextAlignment="Center" FontSize="18px" Foreground="Red" TextWrapping="Wrap" VerticalAlignment="Top" Width="426"/>
        <Button Content="Создать" FontSize="25px" Height="40px" Margin="165,215,148,0" VerticalAlignment="Top" Command="{Binding CreateBonusCard}" RenderTransformOrigin="0.631,0.595" Width="132"/>
    </Grid>
</UserControl>
